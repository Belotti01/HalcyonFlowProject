@inherits BaseComponent<InlineInput>

<div class="tw-grid tw-grid-cols-3">
	@if(!NoLabel) {
		<div>
			<RadzenLabel Text=@Translate(Label ?? Component) MouseEnter=@(x => ShowTooltip(x, Tooltip))/>
		</div>
	}
	<div class="tw-col-span-2 tw-row-span-2">
		<div>
			@ChildContent
		</div>
		<div>
			@if (Required) {
				<RadzenRequiredValidator Component=@Component Text=@Translate("Can't be empty")/>
			}
			@Validators
		</div>
	</div>
</div>

@code {
	[Parameter]
	public bool NoLabel { get; set; } = false;
	[Parameter]
	public RenderFragment ChildContent { get; set; } = null!;
	[Parameter]
	public RenderFragment Validators { get; set; } = null!;
	[Parameter]
	public string Tooltip { get; set; } = string.Empty;
	/// <summary>
	/// The text to show to the user to identify this input's name. If unspecified, <see cref="Component"/> will be used
	/// instead.
	/// </summary>
	[Parameter]
	public string? Label { get; set; } = null;
	/// <summary>
	/// The name of the field linked to this input.
	/// </summary>
	[Parameter]
	public string Component { get; set; } = string.Empty;
	/// <summary>
	/// If <see langword="true"/>, this input field can't be left empty.
	/// </summary>
	[Parameter]
	public bool Required { get; set; } = false;
}
